<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{asset('assetic/bootstrap_css_bootstrap_1.css')}}">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div class="container-fluid">
        {% block body %}
            {% block header %}
                <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
                    <div class=" navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav col-lg-12">

                            <li class="nav-item dropdown ml-md-auto">
                                <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown">Törzsadatok</a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="nav-link" href="{{path('tag_index')}}">Tag-ek<span class="sr-only">(current)</span></a>
                                    <a class="nav-link" href="{{path('packagestatus_index')}}">Csomag Státuszok</a>
                                    <a class="nav-link" href="{{path('address_index')}}">Címek</a>
                            </li>
                            <li></li>
                            {% if is_granted("ROLE_USER") %}
                                <li class="nav-item offset-9">
                                    <a class="nav-link" href="{{path("fos_user_security_logout")}}">Kijelentkezés</a>
                                </li>
                            {% else %}
                                <li class="nav-item offset-9">
                                    <a class="nav-link" href="{{path("fos_user_security_login")}}">Bejelentkezés</a>
                                </li>
                            {% endif %}


                        </ul>

                    </div>
                </nav>
            {% endblock %}
        {% endblock %}
        {% block javascripts %}
          {% javascripts '@jquery' '@bootstrap_js' %}
          <script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>
          <script type="text/javascript" src="{{ asset_url }}"></script>
          <script type="text/javascript" src="{{ asset('assetic/jquery.js') }}"></script>
          <script type="text/javascript" src="{{ asset('assetic/bootstrap_js.js') }}"></script>
          <script type="text/javascript" src="{{ asset('js/jquery-3.4.1.min.js') }}"></script>
          {% endjavascripts %}
        {% endblock %}
    </body>
</html>


