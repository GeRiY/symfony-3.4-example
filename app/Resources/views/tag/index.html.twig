{% extends 'base.html.twig' %}

{% block body %}
    {% block header %}{{ parent() }}{% endblock %}
    <h1>Tags list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a href="{{ path('tag_show', { 'id': tag.id }) }}">{{ tag.name }}</a></td>
                <td>{{ tag.id }}</td>
                <td>
                    <a class="btn btn-primary" style="margin-right: 5px;" href="{{ path('tag_show', { 'id': tag.id }) }}">show</a>
                    <a class="btn btn-primary" style="margin-right: 5px;" href="{{ path('tag_edit', { 'id': tag.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('tag_new') }}">Tag felvitel</a>
{% endblock %}
