{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
<div class="container">
    <div style="text-align: center;"><h1 style="text-align: center;margin-top:5px;margin-bottom:40px;">Profil szerkezt√©s</h1></div>
    <div class="row">
        <div class="col-lg-2">
